<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PortfolioActivity">

    <TextView android:text="@string/nanodegree_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView">

    <Button
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button"
        android:layout_marginTop="34dp"
        style="@style/ButtonStyle"
        android:onClick="showToast"/>

    <Button
        android:text="SCORES APP"
        android:id="@+id/button2"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button"
        android:onClick="showToast"
     />

    <Button
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        style="@style/ButtonStyle"
        android:onClick="showToast"
     />

    <Button
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        style="@style/ButtonStyle"
        android:onClick="showToast"/>

    <Button
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        style="@style/ButtonStyle"
        android:onClick="showToast"
     />

    <Button
        android:text="CAPSTONE:MY OWN APP"
        android:id="@+id/button6"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button5"
        android:background="#ffa80015"
        android:textColor="#ffffffff"
        android:onClick="showToast"/>

    </LinearLayout>

</RelativeLayout>
